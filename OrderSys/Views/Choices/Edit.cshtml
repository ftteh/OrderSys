@model OrderSys.Models.Choice
@{
    Layout = "~/Views/Shared/_Choice.cshtml";
}
<head>
    <link href="~/Content/testing.css" rel="stylesheet" type="text/css" />
</head>

@using (Html.BeginForm("Edit", "Choices", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<section class="flex-sect">
    <div class="flex-title"> Choices  </div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="container-width">
    </div>
    <form class=" form">
        <div class="form-group">
            <label class="label">
                @Html.LabelFor(model => model.Item, htmlAttributes: new { @class = "label" })
            </label>
           
            <input class="input"/> 
                @Html.EditorFor(model => model.Item, new { htmlAttributes = new { @class = "label" } })
                @Html.ValidationMessageFor(model => model.Item, "", new { @class = "label" })
           
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pic, htmlAttributes: new { @class = "label" })
            <div class="col-md-10">
                <div class="editor-field">
                    <input id="Pic" title="Upload"
                           type="file" name="file" />
                </div>
            </div>
        </div>

        <div class="form-group">
        <label class="label">Name</label>
        <input placeholder="Type here your name" class="input" /></div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

    </form>
</section>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

