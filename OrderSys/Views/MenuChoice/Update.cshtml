
@model IEnumerable<OrderSys.Models.Choice>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <header class="header-banner" id="i73c">
        <div class="container-width">
            <div class="logo-container">
                <div class="logo">Home</div>
            </div>
            <nav class="menu">
                <div class="menu-item">Misc<br /></div>
                <div class="menu-item">Sales</div>
                <div class="menu-item">Orders</div>
                <div class="menu-item">@Html.ActionLink("Update Menu", "Update")</div>
            </nav>
            <div class="clearfix"></div>
            <div class="lead-title">COOK4U</div>
            <div class="sub-lead-title">All dishes are prepared with the freshest ingredients and ❤.</div>
        </div>
    </header>
    <section class="flex-sect">
        <div class="container-width">
            <div class="flex-title">Update for @DateTime.Now.ToShortDateString()<br id="ifplmr-2-2" /></div>
            <div class="flex-desc">Tick to add them.<br id="i7bkub-2-2-2" /></div>
            <form action="~/MenuChoice/UpOpp">
                <div class="cards">
                    @foreach (var item in Model)
                    {
                        <div class="card">
                            <div class="card-header"><img src="~/images/choices/@Url.Content(item.Pic)" alt="Image" style='height: 100%; width: 100%; object-fit: contain' /></div>
                            <div class="card-body">
                                <div class="card-title"></div>
                                <div class="card-title">@Html.DisplayFor(modelItem => item.Item)<input value="True" name=@item.Item type="checkbox" /></div>
                                <div class="card-sub-title">RM @Html.DisplayFor(modelItem => item.Price)</div>
                                <div class="card-sub-title">
                                    <div class="card-desc">
                                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
                                        tempor incididunt ut labore
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="flex-desc"><input class="btn btn-info" type="submit" /></div>
            </form>

        </div>
    </section>
    <section class="am-sect">
        <div class="container-width"></div>
    </section>

    <footer class="footer-under">
        <div class="container-width">
            <div class="footer-container">
                <div class="foot-lists">
                    <div class="foot-list">
                        <div class="foot-list-title">About us</div>
                        <div class="foot-list-item">Contact</div>
                        <div class="foot-list-item">Events</div>
                        <div class="foot-list-item">Company</div>
                        <div class="foot-list-item">Jobs</div>
                        <div class="foot-list-item">Blog</div>
                    </div>
                    <div class="foot-list">
                        <div class="foot-list-title">Services</div>
                        <div class="foot-list-item">Partner</div>
                        <div class="foot-list-item">Community</div>
                        <div class="foot-list-item">Forum</div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-sub">
                    <div class="foot-form-cont">
                        <div class="foot-form-title">Subscribe</div>
                        <div class="foot-form-desc">
                            Subscribe to our newsletter to receive exclusive offers and the
                            latest news
                        </div><input name="name" placeholder="Name" class="sub-input" /><input name="email" placeholder="Email" class="sub-input" /><button type="button"
                                                                                                                                                            class="sub-btn">
                            Submit
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright">
            <div class="container-width">
                <div class="foot-social-btns">facebook twitter linkedin mail</div>
                <div class="clearfix"></div>
            </div>
        </div>
    </footer>
</body>
</html>
