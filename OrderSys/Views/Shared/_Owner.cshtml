<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Content/owner.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header class="header-banner" id="i73c">
        <div class="container-width">
            <div class="logo-container">
                <div class="logo">@Html.ActionLink("Home", "Index")</div>
            </div>
            <nav class="menu">

                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("admin"))
                    {
                        <div class="menu-item">@Html.ActionLink("Choice", "Index", new { controller = "Choices" })</div>
                        <div class="menu-item">@Html.ActionLink("Orders", "AllOrders", new { controller = "Orders" })</div>
                        <div class="menu-item">@Html.ActionLink("Menu", "Index", new { controller = "MenuChoice" })</div>
                        <div class="menu-item">@Html.ActionLink("Update Menu", "Update", new { controller = "MenuChoice" })</div>
                        <div class="menu-item">@Html.ActionLink("Manage User", "Index", new { controller = "Orderers" })</div>
                    }
                }
                else if (User.IsInRole("customer"))
                {
                    <div class="menu-item">@Html.ActionLink("Check Order", "nOrder", new { controller = "Orders" })</div>
                }
                <div class="menu-item">@Html.ActionLink("Logout", "Logout", new { controller = "AuthAuth" })</div>


            </nav>
            <div class="clearfix"></div>
            <div class="lead-title">COOK4U</div>
            <div class="sub-lead-title">All dishes are prepared with the freshest ingredients and ❤.</div>
        </div>
    </header>
    @RenderBody()

    <footer class="footer-under">
        <div class="container-width">
            <div class="footer-container">
                <div class="foot-lists">
                    <div class="foot-`list">
                        <div class="foot-list-title">About us</div>
                        <div class="foot-list-item">Contact</div>
                        <div class="foot-list-item">Events</div>
                        <div class="foot-list-item">Company</div>
                        <div class="foot-list-item">Jobs</div>
                        <div class="foot-list-item">Blog</div>
                    </div>
                    <div class="foot-list">
                        <div class="foot-list-title">Services</div>
                        <div class="foot-list-item">Partner</div>
                        <div class="foot-list-item">Community</div>
                        <div class="foot-list-item">Forum</div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-sub">
                    <div class="foot-form-cont">
                        <div class="foot-form-title">Subscribe</div>
                        <div class="foot-form-desc">
                            Subscribe to our newsletter to receive exclusive offers and the
                            latest news
                        </div><input name="name" placeholder="Name" class="sub-input" /><input name="email" placeholder="Email" class="sub-input" /><button type="button"
                                                                                                                                                            class="sub-btn">
                            Submit
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright">
            <div class="container-width">
                <div class="foot-social-btns">facebook twitter linkedin mail</div>
                <div class="clearfix"></div>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>